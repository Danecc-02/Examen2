@model IEnumerable<Examen2.Models.Homework>

@{
    ViewData["Title"] = "Lista de Tareas";
}


<h1 class="clase2">Lista de Tareas</h1>

<link rel="stylesheet" href="~/css/palomita.css" />
<div class="row">
    <table class="table table-dark table-bordered table-hover" >
        <thead>
            <tr>
                <th class="clase1">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="clase1">
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th class="clase1">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th class="clase1">
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th class="clase1">
                    @Html.DisplayNameFor(model => model.FinishDate)
                </th>
                <th class="clase1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority.PriorityDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.NameCategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinishDate)
                    </td>
                    <td>
                        <label class="container" id="c2">

                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script src="~/js/Home.js" asp-append-version="true"></script>